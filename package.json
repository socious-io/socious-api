{
  "name": "socious-api",
  "version": "2.0.0",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "engines": {
    "node": ">= 16.15"
  },
  "engineStrict": true,
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "docker:build": "docker build -t socious-api .",
    "docker:build-dev": "docker build -t socious-api-dev --target development .",
    "docker:run": "docker run -p 8370:8370 -h socious_api --name socious_api --network socious-backend_default -d socious-api",
    "docker:run-dev": "docker run -p 8370:8370 -h socious_api --name socious_api --network socious-backend_default socious-api-dev",
    "migrate": "db-migrate up --verbose --config ./migrations/database.json",
    "migrate:undo": "db-migrate down -c 1 --verbose --config ./migrations/database.json",
    "migrate:new": "db-migrate create --sql-file --config ./migrations/database.json",
    "prettier:check": "prettier --check **/*.js",
    "prettier:fix": "prettier --write .",
    "start": "node serve.js",
    "start:debug": "nodemon --inspect serve.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.js\" --fix",
    "pretest": "cross-env ENV=testing node scripts/createdb.js ; db-migrate --dotenvCustomPath=test.env up --config ./migrations/database.json",
    "test": "cross-env ENV=testing node --experimental-vm-modules node_modules/jest/bin/jest.js --forceExit",
    "posttest": "cross-env ENV=testing node scripts/dropdb.js",
    "test:watch": "cross-env ENV=testing node --experimental-vm-modules node_modules/jest/bin/jest.js --forceExit --watch",
    "test:ci": "cross-env ENV=testing node --experimental-vm-modules node_modules/jest/bin/jest.js --forceExit --ci --reporters='default' --reporters=jest-junit",
    "test:cov": "cross-env ENV=testing node --experimental-vm-modules node_modules/jest/bin/jest.js --forceExit --coverage",
    "test:debug": "cross-env ENV=testing node --inspect-brk node_modules/.bin/jest --runInBand",
    "apidoc": "apidoc -i src/routes -o apidoc",
    "workers": "node src/services/jobs/workers.js",
    "workers:watch": "nodemon --inspect src/services/jobs/workers.js"
  },
  "dependencies": {
    "@babel/eslint-parser": "^7.19.1",
    "@forfuture/apidoc-openapi": "^0.0.1",
    "@koa/cors": "^3.4.1",
    "@koa/router": "^12.0.0",
    "@sendgrid/mail": "^7.7.0",
    "@socious/data": "^1.0.10",
    "apidoc": "^0.52.0",
    "aws-sdk": "^2.1223.0",
    "axios": "^0.27.2",
    "bcrypt": "^5.0.1",
    "cockatiel": "^2.0.2",
    "cookie-parser": "~1.4.6",
    "db-migrate": "^1.0.0-beta.18",
    "db-migrate-pg": "^1.2.2",
    "debug": "~4.3.4",
    "dotenv": "^16.0.3",
    "ejs": "^3.1.8",
    "http-errors": "~2.0.0",
    "jest-junit": "^14.0.1",
    "joi": "^17.6.2",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.13.4",
    "koa-body": "^5.0.0",
    "koa-jwt": "^4.0.3",
    "koa-morgan": "^1.0.1",
    "koa-session": "^6.2.0",
    "koa2-swagger-ui": "^5.6.0",
    "luxon": "^3.0.4",
    "morgan": "~1.10.0",
    "mutexify": "^1.4.0",
    "nats": "2.8",
    "nodemailer": "^6.8.0",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pg": "^8.8.0",
    "sanitize-html": "^2.7.2",
    "socket.io": "^4.5.2",
    "sql-template-tag": "^5.0.3",
    "stripe": "^10.12.0",
    "supertest-koa-agent": "^0.3.2"
  },
  "devDependencies": {
    "@babel/plugin-syntax-import-assertions": "^7.18.6",
    "cross-env": "^7.0.3",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^27.0.4",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "husky": "^8.0.1",
    "jest": "^29.1.2",
    "lint-staged": "^13.0.3",
    "nodemon": "^2.0.20",
    "prettier": "^2.7.1",
    "supertest": "^6.2.4"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{js,css,md}": "prettier --write"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "testRegex": "(tests/.*|(\\.|/)(test|spec))\\.js$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/build/",
      "/test-results/",
      "/coverage/"
    ],
    "roots": [
      "<rootDir>/test/"
    ]
  },
  "jest-junit": {
    "outputDirectory": "test-results"
  }
}
