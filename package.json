{
  "name": "socious-api",
  "version": "0.0.2",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "engines": {
    "node": ">= 16"
  },
  "engineStrict": true,
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "docker:build": "docker build -t socious-api .",
    "docker:build-dev": "docker build -t socious-api-dev --target development .",
    "docker:run": "docker run -p 8370:8370 -h socious_api --name socious_api --network socious-backend_default -d socious-api",
    "docker:run-dev": "docker run -p 8370:8370 -h socious_api --name socious_api --network socious-backend_default socious-api-dev",
    "migrate": "db-migrate up --verbose --config ./migrations/database.json",
    "migrate:undo": "db-migrate down -c 1 --verbose --config ./migrations/database.json",
    "migrate:new": "db-migrate create --sql-file --config ./migrations/database.json",
    "prettier:check": "prettier --check **/*.js",
    "prettier:fix": "prettier --write .",
    "start": "node serve.js",
    "start:debug": "nodemon --inspect serve.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.js\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@koa/router": "^12.0.0",
    "axios": "^0.27.2",
    "bcrypt": "^5.0.1",
    "cockatiel": "^2.0.2",
    "cookie-parser": "~1.4.6",
    "db-migrate": "^0.11.13",
    "db-migrate-pg": "^1.2.2",
    "debug": "~4.3.4",
    "dotenv": "^16.0.1",
    "http-errors": "~2.0.0",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.13.4",
    "koa-body": "^5.0.0",
    "koa-jwt": "^4.0.3",
    "koa-morgan": "^1.0.1",
    "luxon": "^3.0.1",
    "morgan": "~1.10.0",
    "mutexify": "^1.4.0",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pg": "^8.7.3",
    "sql-template-tag": "^5.0.3",
    "supertest-koa-agent": "^0.3.2"
  },
  "devDependencies": {
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^26.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "lint-staged": "^13.0.3",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "supertest": "^6.2.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.js$",
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src/"
    ]
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{js,css,md}": "prettier --write"
  }
}
